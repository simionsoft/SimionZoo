<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org" x:Class="Badger.Views.MultiValuedConfigView"
             mc:Ignorable="d" 
                d:DesignHeight="50" d:DesignWidth="300">
    <!--Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">-->
    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />

        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel Orientation="Vertical">
        <ItemsControl x:Name="children"/>
        <Button VerticalAlignment="Center" Background="Transparent" BorderBrush="{x:Null}" x:Name="Add" 
                            cal:Message.Attach="[Event Click]=[addChild]"
                            >
            <Path Data="{StaticResource Add}" Stretch="Uniform" Fill="#89000000"
                  Width="16" Height="16"/>
        </Button>
    </StackPanel>
</UserControl>
